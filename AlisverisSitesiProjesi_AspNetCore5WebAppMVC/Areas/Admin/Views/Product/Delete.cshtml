@model AlisverisSitesiProjesi_AspNetCore5WebAppMVC.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Bu ürünü silmek istediğinize emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ürün Görünümü
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            Ürün Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Ürün Açıklaması
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Ürün Fiyatı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Ürün Rengi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            Ürün Bedeni
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            Stok Durumu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsStock)
        </dd>
        <dt class="col-sm-2">
            Ürün Kategorisi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">Ürün Listesi</a>
    </form>
</div>
