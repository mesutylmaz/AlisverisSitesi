@model AlisverisSitesiProjesi_AspNetCore5WebAppMVC.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <h4 class="text-success">Ürün Ekleme Sayfası</h4>
        <form asp-action="Create" enctype="multipart/form-data">             @*enctype="multipart/form-data" Dışarıdan resim ekleyebilmek içindir*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Ürün Görünümü
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ürün Adı
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ürün Açıklaması
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ürün Fiyatı
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ürün Rengi
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ürün Bedeni
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsStock" /> Stok Durumu
                </label>
            </div>
            <div class="form-group">
                Ürün Kategorisi
                <select asp-for="KategoriID" class="form-control" asp-items="ViewBag.KategoriID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ürünü Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Ürün Listesi</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
